# UAEF Environment Configuration
# Copy this file to .env and update with your values

# Application
UAEF_ENVIRONMENT=development
UAEF_DEBUG=true
UAEF_LOG_LEVEL=INFO

# Database
UAEF_DB_URL=postgresql://localhost:5432/uaef
UAEF_DB_POOL_SIZE=5
UAEF_DB_MAX_OVERFLOW=10

# Security (CHANGE THESE IN PRODUCTION)
UAEF_SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-in-production
UAEF_SECURITY_JWT_ALGORITHM=HS256
UAEF_SECURITY_JWT_EXPIRATION_HOURS=24
UAEF_SECURITY_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Ledger
UAEF_LEDGER_HASH_ALGORITHM=sha256
UAEF_LEDGER_REQUIRE_SIGNATURE=true
UAEF_LEDGER_CHECKPOINT_INTERVAL=100

# Agent Configuration
UAEF_AGENT_ANTHROPIC_API_KEY=your-anthropic-api-key
UAEF_AGENT_DEFAULT_MODEL=claude-sonnet-4-20250514
UAEF_AGENT_MAX_CONCURRENT_AGENTS=10
UAEF_AGENT_TASK_TIMEOUT_SECONDS=300

# Settlement
UAEF_SETTLEMENT_DEFAULT_CURRENCY=USD
UAEF_SETTLEMENT_AUTO_SETTLE=false

# AWS (for serverless deployment)
UAEF_AWS_REGION=us-east-1
